#.bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
        . /etc/bashrc
fi

PATH="$HOME/.local/bin:$HOME/bin:$PATH"
export PATH=/opt/ioapi/3.2-gcc/Linux2_x86_64gfort/bin:$PATH
export PATH=/opt/netcdf/netcdfc-4.7.4/bin:$PATH
export PATH

#ARWpost
export DIR=/mnt/wk2/recommend_model/performance/Met_plot_tool/ARWPOST/Library/
export HDF5=$DIR
export LD_LIBRARY_PATH=$DIR/lib:$LD_LIBRARY_PATH

#grads
export PATH=/opt/grads-2.1.a3/bin:$PATH
export GADDIR=/opt/grads-2.1.a3/dat
export GASCRP=/opt/grads-2.1.a3/lib


# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!

export CondaDIR=/mnt/wk2/recommend_model/performance/anaconda3
export PATH=$CondaDIR/bin:$PATH

__conda_setup="$('$CondaDIR/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "$CondaDIR/etc/profile.d/conda.sh" ]; then
        . "$CondaDIR/etc/profile.d/conda.sh"
    else
        export PATH="$CondaDIR/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
